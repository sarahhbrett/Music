
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Users</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
  <h1>Users</h1>
  <hr>
  <% @users.each do |user| %>
  <div class="row">
    <div class="col-xs-3">
        <a href="#" class="thumbnail">
             <%= image_tag user.photo, :size => "200x200" %>
        </a>
		<ul class="list-inline">
		<li><a href="#" title="<%= user.name %>" data-toggle="popover" data-placement="top" data-content=" <%= user.email %>               <%= user.dob %>             <%= user.sex %> "> <%= user.name %></a></li>
		
	   <li><%= link_to 'Show', user %></li>
       <li><%= link_to 'Edit', edit_user_path(user) %></li>
      <li> <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %></li>
	  
    </div>
	
    <tbody>


		</ul>
  <% end %>
</div>

<script>
$(document).ready(function(){
    $('[data-toggle="popover"]').popover();   
});
</script>
    

<%= button_to('See all users', users_path, class: 'btn btn-large btn-primary', method: :get) %>


</body>


</html>












